<UserControl x:Class="Attendance.Wpf.Views.UsersView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="Add" Width="100" Margin="0,0,8,0"/>
            <Button Content="Edit" Width="100" Margin="0,0,8,0"/>
            <Button Content="Remove" Width="100"/>
        </StackPanel>
        <DataGrid Grid.Row="1" Margin="0,8,0,0" AutoGenerateColumns="True"/>
    </Grid>
</UserControl>

